# OpenAI Configuration
OPENAI_API_KEY="your_openai_api_key"
OPENAI_MODEL=gpt-4

# TTS Service Selection (gtts, azure, elevenlabs)
TTS_SERVICE=gtts

# Azure TTS (Optional - if using Azure)
# AZURE_TTS_KEY=your_azure_tts_key
# AZURE_TTS_REGION=eastus

# # ElevenLabs (Optional - if using ElevenLabs)
# ELEVENLABS_API_KEY=your_elevenlabs_api_key
# ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# Application Settings
MAX_PDF_SIZE_MB=50
VIDEO_OUTPUT_FORMAT=mp4
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Image Generation Settings
GENERATE_LECTURER_AVATAR=true
GENERATE_CONTENT_VISUALS=true
MAX_VISUAL_SEGMENTS=5

# Cost Control
USE_DALLE=true  # Set to false to use placeholder images only